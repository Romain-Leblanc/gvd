{% extends 'base_admin.html.twig' %}

{% block title %}Ajout utilisateur{% endblock %}

{% block body %}
    <div class="d-flex flex-column gap-4">
        <div class="d-flex justify-content-center align-items-center">
            <h6 class="mb-0 text-primary text-decoration-underline">Ajout utilisateur</h6>
        </div>
        {% if errors is defined %}
            {% for error in errors %}
                <div class="alert alert-danger" role="alert">{{ error.message|nl2br }}</div>
            {% endfor %}
        {% endif %}
        <div class="div-form">
            {{ form_start(formAddUtilisateur) }}
            <div class="d-flex flex-column gap-3">
                <div class="row">
                    {{ form_label(formAddUtilisateur.nom) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {{ form_widget(formAddUtilisateur.nom) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_label(formAddUtilisateur.prenom) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {{ form_widget(formAddUtilisateur.prenom) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_label(formAddUtilisateur.email) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {{ form_widget(formAddUtilisateur.email) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_label(formAddUtilisateur.password) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {{ form_widget(formAddUtilisateur.password) }}
                    </div>
                </div>
                <div class="row">
                    {{ form_label(formAddUtilisateur.roles) }}
                    <div class="col-lg-5 col-md-6 row mx-0">
                        {% if "ROLE_ADMIN" in formAddUtilisateur.roles.vars.value %}
                            {{ form_widget(formAddUtilisateur.roles, { 'value': "ROLE_ADMIN" }) }}
                        {% else %}
                            {{ form_widget(formAddUtilisateur.roles, { 'value': "ROLE_USER" }) }}
                        {% endif %}
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <button class="btn btn-success fs-14" type="submit">Valider</button>
                </div>
            </div>
            {{ form_end(formAddUtilisateur) }}
        </div>
    </div>
{% endblock %}
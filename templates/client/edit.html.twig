{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <div class="div-liste">
        <div id="div-tab">
            {% if errors is defined %}
                {% for error in errors %}
                    <div class="alert alert-danger" role="alert">{{ error.message|nl2br }}</div>
                {% endfor %}
            {% endif %}
            {{ form_start(formEditClient) }}
            <div class="div-detail mb-3">
                {{ form_label(formEditClient.nom) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formEditClient.nom) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formEditClient.prenom) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formEditClient.prenom) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formEditClient.tel) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formEditClient.tel) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formEditClient.email) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formEditClient.email) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formEditClient.adresse) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formEditClient.adresse) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formEditClient.suite_adresse) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formEditClient.suite_adresse) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formEditClient.code_postal) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formEditClient.code_postal) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formEditClient.ville) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formEditClient.ville) }}
                </div>
            </div>
        </div>
        <div class="div-envoi-form">
            <button id="btn-submit" type="submit" class="btn btn-success">Valider</button>
        </div>
        {{ form_end(formEditClient) }}
    </div>
{% endblock %}
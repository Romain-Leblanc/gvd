{% block body %}
    <div class="div-liste">
        <div id="div-tab">
            {% if errors is defined %}
                {% for error in errors %}
                    <div class="alert alert-danger" role="alert">{{ error.message|nl2br }}</div>
                {% endfor %}
            {% endif %}
            {{ form_start(formAddVehicule) }}
            <div class="div-detail mb-3">
                {{ form_label(formAddVehicule.fk_client) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formAddVehicule.fk_client) }}
                </div>
            </div>
            <div class="div-row mb-3 gap-3">
                <div class="div-select-line">
                    {{ form_label(formAddVehicule.fk_marque) }}
                    {{ form_widget(formAddVehicule.fk_marque) }}
                </div>
                <div class="div-select-line">
                    {{ form_label(formAddVehicule.fk_modele) }}
                    {{ form_widget(formAddVehicule.fk_modele) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formAddVehicule.fk_etat) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formAddVehicule.fk_etat) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formAddVehicule.fk_carburant) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formAddVehicule.fk_carburant) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formAddVehicule.annee) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formAddVehicule.annee) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formAddVehicule.kilometrage) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formAddVehicule.kilometrage) }}
                </div>
            </div>
            <div class="div-detail mb-3">
                {{ form_label(formAddVehicule.immatriculation) }}
                <div class="col-lg-5 col-md-6">
                    {{ form_widget(formAddVehicule.immatriculation) }}
